{
  "name": "dicekeys",
  "author": "DiceKeys, LLC",
  "productName": "DiceKeys",
  "description": "DiceKeys App",
  "version": "0.0.1",
  "main": "electron-js/electron.js",
  "homepage": "https://dicekeys.com",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "watch": "rimraf ./electron-js && tsc --watch",
    "build": "rimraf ./electron-js tsconfig.tsbuildinfo && tsc",
    "start": "rimraf ./electron-js tsconfig.tsbuildinfo && tsc && electron --version && electron .",
    "start-electron": "electron .",
    "lint": "eslint --ext .ts .",
    "pack": "electron-builder --dir --config=electron-builder.js",
    "dist-macos": "electron-builder --config=electron-builder.js --macos --arm64 --x64",
    "dist-win-linux": "electron-builder --config=electron-builder.js --linux --win --x64"
  },
  "keywords": [],
  "license": "MIT",
  "config": {
    "forge": "./forge.config.js"
  },
  "build": "electron-builder.js",
  "devDependencies": {
    "@types/w3c-web-hid": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "electron": "^16.0.2",
    "electron-builder": "^22.14.5",
    "electron-builder-squirrel-windows": "^22.14.5",
    "electron-reloader": "^1.2.1",
    "eslint": "^8.0.1",
    "eslint-plugin-import": "^2.25.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "keytar": "^7.7.0"
  }
}
